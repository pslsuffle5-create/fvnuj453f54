    <script>
        let currentAimbotKey = "None";

        function updateDate() {
            const now = new Date();
            const day = String(now.getDate()).padStart(2, '0');
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const year = now.getFullYear();
            document.getElementById('date-display').innerHTML = `${day}/${month} <span style="color: var(--accent)">${year}</span>`;
        }
        setInterval(updateDate, 1000); updateDate();

        function tab(name) {
            document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
            document.getElementById(name).classList.add('active');
            document.getElementById('t-'+name).classList.add('active');
        }

        function setKey() {
            const btn = document.getElementById('a_key');
            btn.innerText = "...";
            const handler = (e) => {
                currentAimbotKey = e.key.toUpperCase();
                btn.innerText = currentAimbotKey;
                window.removeEventListener('keydown', handler);
                push();
            };
            window.addEventListener('keydown', handler);
        }

        function push() {
            const ids = ['a_fov','a_smooth','a_pred','a_range','s_px','s_py','s_f_ts','v_name_s','v_dist_s','v_tr_s','v_hc_s','m_ws','m_jp','m_fly_s'];
            ids.forEach(id => {
                const el = document.getElementById(id);
                if(el && document.getElementById('v_'+id)) document.getElementById('v_'+id).innerText = el.value;
            });

            const data = {
                a_e: document.getElementById('a_e').checked, a_key: currentAimbotKey, a_type: document.getElementById('a_type').value, a_bone: document.getElementById('a_bone').value, a_sticky: document.getElementById('a_sticky').checked, a_fov: parseFloat(document.getElementById('a_fov').value), a_smooth: parseFloat(document.getElementById('a_smooth').value), a_pred: parseFloat(document.getElementById('a_pred').value), a_range: parseInt(document.getElementById('a_range').value), a_sfov: document.getElementById('a_sfov').checked,
                s_e: document.getElementById('s_e').checked, s_ao: document.getElementById('s_ao').checked, s_sfov: document.getElementById('s_sfov').checked, s_f_ts: parseFloat(document.getElementById('s_f_ts').value), s_px: parseFloat(document.getElementById('s_px').value), s_py: parseFloat(document.getElementById('s_py').value), s_spred: document.getElementById('s_spred').checked, s_vis: document.getElementById('s_vis').checked,
                v_box: document.getElementById('v_box').checked, v_skel: document.getElementById('v_skel').checked, v_tr: document.getElementById('v_tr').checked, v_name: document.getElementById('v_name').checked, v_hp: document.getElementById('v_hp').checked, v_dist: document.getElementById('v_dist').checked, v_3d: document.getElementById('v_3d').checked, v_name_s: parseFloat(document.getElementById('v_name_s').value), v_dist_s: parseFloat(document.getElementById('v_dist_s').value), v_tr_s: parseFloat(document.getElementById('v_tr_s').value), v_hc_s: parseFloat(document.getElementById('v_hc_s').value), v_box_f: document.getElementById('v_box_f').checked, v_china: document.getElementById('v_china').checked, v_local: document.getElementById('v_local').checked, v_remove_borders: document.getElementById('v_remove_borders').checked, v_cesp: document.getElementById('v_cesp').checked,
                m_ws_e: document.getElementById('m_ws_e').checked, m_ws: parseFloat(document.getElementById('m_ws').value), m_jp_e: document.getElementById('m_jp_e').checked, m_jp: parseFloat(document.getElementById('m_jp').value), m_fly_e: document.getElementById('m_fly_e').checked, m_fly_s: parseFloat(document.getElementById('m_fly_s').value), m_ds: document.getElementById('m_ds').checked
            };
            fetch('http://localhost:3000/', { method: 'POST', body: JSON.stringify(data) }).catch(() => {});
        }

        async function check() {
            try {
                const res = await fetch('http://localhost:3000/status');
                if (res.ok) {
                    const data = await res.json();
                    document.getElementById('status-dot').style.background = '#44ff44';
                    document.getElementById('status-dot').style.boxShadow = '0 0 5px #44ff44';
                    document.getElementById('status-text').innerText = 'CONNECTED';
                    if (data.connected) document.getElementById('user-name').innerText = data.username.toUpperCase();
                }
            } catch (e) {
                document.getElementById('status-dot').style.background = '#ff4444';
                document.getElementById('status-text').innerText = 'OFFLINE';
            }
        }
        setInterval(check, 1500); check();
    </script>
</body>
